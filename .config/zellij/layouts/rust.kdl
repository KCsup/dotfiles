layout {
	pane size=1 borderless=true {
		plugin location="zellij:tab-bar"
	}

	pane {
		split_direction "vertical"
		pane {
			size "65%"
			pane {
				size "70%"
				cwd "./src"
			}
			pane size="30%"
		}
		
		pane {
			size "35%"
			command "bacon"
		}

	}

	pane size=1 borderless=true {
		plugin location="zellij:status-bar"
	}
}
